{
  "patternId": "recipe-nette",
  "name": "Nette",
  "description": "Recipe Nette application",
  "framework": "Recipe Nette",
  "language": "Unknown",
  "tags": [],
  "services": [
    {
      "enableSubdomainAccess": true,
      "envSecrets": {
        "ADMIN_PASSWORD": "\u003c@generateRandomString(\u003c24\u003e)\u003e",
        "APP_ENV": "dev"
      },
      "hostname": "app",
      "type": "php-apache@8.3",
      "verticalAutoscaling": {
        "minFreeRamGB": 0.125,
        "minRam": 0.25
      }
    },
    {
      "hostname": "db",
      "mode": "NON_HA",
      "priority": 10,
      "type": "postgresql@16"
    },
    {
      "hostname": "redis",
      "mode": "NON_HA",
      "priority": 10,
      "type": "keydb@6"
    },
    {
      "enableSubdomainAccess": true,
      "hostname": "adminer",
      "maxContainers": 1,
      "type": "php-apache@8.3"
    }
  ],
  "zeropsYml": {
    "zerops": [
      {
        "build": {
          "base": "php@8.3",
          "buildCommands": [
            "composer install --optimize-autoloader --no-dev"
          ],
          "cache": [
            "vendor",
            "composer.lock"
          ],
          "deployFiles": "./",
          "os": "alpine"
        },
        "deploy": {
          "readinessCheck": {
            "httpGet": {
              "path": "/",
              "port": 80
            }
          }
        },
        "run": {
          "base": "php-apache@8.3",
          "documentRoot": "www/",
          "healthCheck": {
            "httpGet": {
              "path": "/",
              "port": 80
            }
          },
          "initCommands": [
            "zsc execOnce $appVersionId -- php /var/www/bin/console migrations:continue",
            "chown -R zerops:zerops /var/www/temp/"
          ],
          "os": "alpine"
        },
        "setup": "app"
      }
    ]
  },
  "sourceRecipe": "recipe-nette-main",
  "deploymentType": "local"
}