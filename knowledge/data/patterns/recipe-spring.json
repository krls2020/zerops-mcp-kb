{
  "patternId": "recipe-spring",
  "name": "Spring",
  "description": "Recipe Spring application",
  "framework": "Recipe Spring",
  "language": "Unknown",
  "tags": [],
  "services": [
    {
      "enableSubdomainAccess": true,
      "hostname": "api",
      "maxContainers": 1,
      "priority": 5,
      "type": "java@21",
      "verticalAutoscaling": {
        "minRam": 1
      }
    },
    {
      "enableSubdomainAccess": true,
      "hostname": "app",
      "type": "static"
    },
    {
      "hostname": "db",
      "mode": "NON_HA",
      "priority": 10,
      "type": "postgresql@16"
    },
    {
      "hostname": "storage",
      "objectStoragePolicy": "public-read",
      "objectStorageSize": 2,
      "priority": 10,
      "type": "object-storage"
    },
    {
      "enableSubdomainAccess": true,
      "hostname": "adminer",
      "type": "php-apache@8.1"
    },
    {
      "enableSubdomainAccess": true,
      "hostname": "mailpit",
      "type": "go@1"
    }
  ],
  "zeropsYml": {
    "zerops": [
      {
        "build": {
          "base": "java@21",
          "buildCommands": [
            "./mvnw clean install --define maven.test.skip"
          ],
          "deployFiles": [
            "./target/api.jar"
          ]
        },
        "run": {
          "base": "java@21",
          "envVariables": {
            "DB_HOST": "db",
            "DB_PASSWORD": "$db_password",
            "DB_PORT": "$db_port",
            "DB_USER": "$db_user",
            "MAIL_HOST": "mailpit",
            "MAIL_PORT": "1025",
            "S3_ACCESS_KEY": "$storage_accessKeyId",
            "S3_BUCKET": "$storage_bucketName",
            "S3_ENDPOINT": "$storage_apiUrl",
            "S3_SECRET_KEY": "$storage_secretAccessKey"
          },
          "ports": [
            {
              "httpSupport": true,
              "port": 8080
            }
          ],
          "start": "java -jar target/api.jar"
        },
        "setup": "api"
      }
    ]
  },
  "sourceRecipe": "recipe-spring-main",
  "deploymentType": "local"
}