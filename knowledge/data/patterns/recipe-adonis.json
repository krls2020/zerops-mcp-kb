{
  "patternId": "recipe-adonis",
  "name": "Adonis",
  "description": "AdonisJS application",
  "framework": "AdonisJS",
  "language": "Unknown",
  "tags": [
    "adonis"
  ],
  "services": [
    {
      "enableSubdomainAccess": true,
      "hostname": "app",
      "type": "nodejs@20"
    },
    {
      "hostname": "db",
      "mode": "NON_HA",
      "type": "postgresql@16"
    }
  ],
  "zeropsYml": {
    "zerops": [
      {
        "build": {
          "base": "nodejs@20",
          "buildCommands": [
            "pnpm i",
            "pnpm run build",
            "cd build \u0026 pnpm i --prod"
          ],
          "deployFiles": [
            "build/~"
          ]
        },
        "run": {
          "base": "nodejs@20",
          "envVariables": {
            "APP_KEY": "NTq5-pBUstxNeMhzLRKQazAbawS3suyh",
            "DB_DATABASE": "db",
            "DB_HOST": "db",
            "DB_PASSWORD": "${db_password}",
            "DB_PORT": 5432,
            "DB_USER": "db",
            "HOST": "localhost",
            "LOG_LEVEL": "info",
            "NODE_ENV": "development",
            "PORT": 3333,
            "SESSION_DRIVER": "cookie",
            "TZ": "UTC"
          },
          "ports": [
            {
              "httpSupport": true,
              "port": 3000
            }
          ],
          "start": "node bin/server.js"
        },
        "setup": "app"
      }
    ]
  },
  "sourceRecipe": "recipe-adonis-main",
  "deploymentType": "local"
}