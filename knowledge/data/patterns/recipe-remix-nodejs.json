{
  "patternId": "recipe-remix-nodejs",
  "name": "Remix Nodejs",
  "description": "Remix application",
  "framework": "Remix",
  "language": "JavaScript",
  "tags": [
    "remix",
    "nodejs"
  ],
  "services": [
    {
      "enableSubdomainAccess": true,
      "hostname": "app",
      "type": "nodejs@20"
    }
  ],
  "zeropsYml": {
    "zerops": [
      {
        "build": {
          "base": "nodejs@20",
          "buildCommands": [
            "pnpm i",
            "pnpm run build"
          ],
          "deployFiles": [
            "build",
            "server.js",
            "package.json",
            "node_modules"
          ]
        },
        "run": {
          "base": "nodejs@20",
          "ports": [
            {
              "httpSupport": true,
              "port": 3000
            }
          ],
          "start": "pnpm start"
        },
        "setup": "app"
      }
    ]
  },
  "sourceRecipe": "recipe-remix-nodejs-main",
  "deploymentType": "local"
}