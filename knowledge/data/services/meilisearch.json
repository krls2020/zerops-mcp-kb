{
  "type": "meilisearch",
  "category": "search",
  "description": "Lightning-fast search engine with instant search capabilities",
  "versions": [
    { "version": "1", "status": "current", "recommended": true, "note": "Always uses latest stable" }
  ],
  "modes": ["NON_HA"],
  "ports": {
    "default": 7700,
    "internal": true,
    "httpSupport": true
  },
  "configuration": {
    "yamlImport": {
      "required": ["hostname", "type"],
      "optional": ["minContainers", "maxContainers", "envVariables"],
      "defaults": {
        "mode": "NON_HA"
      }
    },
    "resources": {
      "minContainers": 1,
      "maxContainers": { "max": 6 },
      "verticalScaling": {
        "cpu": { "min": 1, "max": 32, "units": "cores" },
        "ram": { "min": 0.5, "max": 128, "units": "GB" },
        "disk": { "min": 5, "max": 5000, "units": "GB" }
      }
    }
  },
  "envVariables": {
    "system": {
      "MEILI_ENV": "production",
      "MEILI_DB_PATH": "/var/lib/meilisearch"
    },
    "autoGenerated": {
      "hostname": "Internal hostname for connections",
      "connectionString": "Full Meilisearch URL",
      "host": "Meilisearch host (same as hostname)",
      "port": "HTTP port (7700)",
      "master_key": "Auto-generated master API key"
    }
  },
  "access": {
    "internal": "Accessible from other services via ${servicename_hostname}",
    "external": "No direct external access, use VPN for management",
    "auth": "API key authentication with master key",
    "apiKeys": {
      "master": "Full access to all operations",
      "admin": "Create via API for admin access",
      "search": "Create via API for search-only access"
    }
  },
  "features": [
    "Instant search-as-you-type",
    "Typo tolerance",
    "Faceted search",
    "Filtering and sorting",
    "Synonyms support",
    "Multi-language support",
    "Geo-search capabilities",
    "RESTful API",
    "Zero configuration setup"
  ],
  "searchFeatures": {
    "typoTolerance": {
      "enabled": true,
      "description": "Handles typos automatically"
    },
    "ranking": {
      "default": ["words", "typo", "proximity", "attribute", "sort", "exactness"],
      "customizable": true
    },
    "highlighting": {
      "enabled": true,
      "tags": ["<em>", "</em>"]
    },
    "faceting": {
      "enabled": true,
      "maxValues": 100
    }
  },
  "bestPractices": [
    "Use appropriate index settings for your data",
    "Configure searchable and displayed attributes",
    "Set up proper ranking rules",
    "Use facets for filtering",
    "Implement pagination for large results",
    "Monitor index size and performance",
    "Use API keys for access control"
  ],
  "clientLibraries": {
    "javascript": "meilisearch",
    "python": "meilisearch",
    "php": "meilisearch/meilisearch-php",
    "ruby": "meilisearch-ruby",
    "go": "github.com/meilisearch/meilisearch-go",
    "rust": "meilisearch-sdk"
  },
  "connectionExamples": {
    "javascript": {
      "code": "import { MeiliSearch } from 'meilisearch';\nconst client = new MeiliSearch({\n  host: 'http://${hostname}:7700',\n  apiKey: '${master_key}'\n});"
    },
    "python": {
      "code": "import meilisearch\nclient = meilisearch.Client(\n  'http://${hostname}:7700',\n  '${master_key}'\n)"
    },
    "curl": {
      "command": "curl -H 'Authorization: Bearer ${master_key}' http://${hostname}:7700/health"
    }
  },
  "indexing": {
    "documents": {
      "format": "JSON objects",
      "primaryKey": "Unique identifier field",
      "batchSize": "Up to 1GB per request"
    },
    "settings": {
      "searchableAttributes": "Fields to search in",
      "displayedAttributes": "Fields to return",
      "filterableAttributes": "Fields for filtering",
      "sortableAttributes": "Fields for sorting"
    }
  },
  "useCases": {
    "ecommerce": {
      "description": "Product search with filters",
      "features": ["Instant search", "Faceted filtering", "Typo tolerance"]
    },
    "documentation": {
      "description": "Documentation search",
      "features": ["Full-text search", "Highlighting", "Relevance ranking"]
    },
    "saas": {
      "description": "In-app search",
      "features": ["Multi-tenancy", "Real-time indexing", "Custom ranking"]
    }
  },
  "examples": {
    "basic": {
      "yamlImport": {
        "services": [
          {
            "hostname": "search",
            "type": "meilisearch@1"
          }
        ]
      }
    },
    "withApp": {
      "yamlImport": {
        "services": [
          {
            "hostname": "search",
            "type": "meilisearch@1"
          },
          {
            "hostname": "api",
            "type": "nodejs@20",
            "ports": [{ "port": 3000, "httpSupport": true }],
            "envVariables": {
              "MEILISEARCH_URL": "http://${search_hostname}:7700",
              "MEILISEARCH_API_KEY": "${search_master_key}"
            }
          }
        ]
      }
    }
  },
  "performance": {
    "indexing": "Fast indexing with immediate availability",
    "search": "Sub-50ms search response times",
    "scalability": "Handles millions of documents efficiently"
  }
}